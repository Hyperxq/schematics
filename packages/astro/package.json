{
  "name": "@pbuilder/astro",
  "version": "1.1.7",
  "description": "A set schematics for astro",
  "scripts": {
    "build": "rollup -c --bundleConfigAsCjs",
    "test": "npm run build && jasmine src/**/*_spec.js",
    "format": "prettier --write .",
    "build:watch": "rollup -c --bundleConfigAsCjs --watch",
    "publish": "npm run build && cd ../../dist/astro && npm publish --access=public",
    "publish:verdaccio": "npm run build && cd ../../dist/astro && npm publish --registry http://localhost:4873"
  },
  "keywords": [
    "schematics"
  ],
  "author": "",
  "license": "MIT",
  "schematics": "./collection.json",
  "dependencies": {
    "@angular-devkit/core": "^17.1.2",
    "@angular-devkit/schematics": "^17.1.2",
    "ansi-colors": "4.1.3",
    "node-emoji": "2.1.0",
    "ora": "5.4.1",
    "inquirer": "8.2.6",
    "typescript": "~5.3.2",
    "winston": "3.11.0",
    "winston-console-format": "1.0.8"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-swc": "^0.3.0",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-lover": "2.1.0",
    "eslint-plugin-header": "3.1.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-n": "16.6.2",
    "eslint-plugin-promise": "6.1.1",
    "glob": "^10.3.10",
    "husky": "^8.0.3",
    "jasmine": "^5.0.0",
    "lint-staged": "^13.3.0",
    "prettier": "3.2.5",
    "rollup": "3.29.4",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-tsconfig-paths": "^1.5.2"
  },
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "node": ">= 20"
  }
}